  schedule         String   @default("Lunes a viernes de 08:00 a 18:00")
  primaryCopy      String   @default("Instalaciones eléctricas de alta performance.")
  metrics          String   @default("[]")
  siteExperience   String   @default("{}")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         String   @default("ADMIN")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ContentPage {
