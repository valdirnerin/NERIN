  slug           String   @unique
  title          String
  description    String?
  sections       String   @default("[]")
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model ContentService {
  id          String   @id @default(cuid())
  title       String
  description String
  order       Int      @default(0)
  active      Boolean  @default(true)
